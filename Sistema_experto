def diagnostico():
    print("Sistema experto de diagnóstico médico")
    print("Responde con 'sí' o 'no' a las siguientes preguntas:")

    sintomas = {
        "fiebre": input("¿Tienes fiebre? ").strip().lower() == "sí",
        "tos": input("¿Tienes tos? ").strip().lower() == "sí",
        "dolor_garganta": input("¿Tienes dolor de garganta? ").strip().lower() == "sí",
        "dolor_cabeza": input("¿Tienes dolor de cabeza? ").strip().lower() == "sí",
        "nauseas": input("¿Tienes náuseas? ").strip().lower() == "sí",
        "vomitos": input("¿Has vomitado? ").strip().lower() == "sí",
        "diarrea": input("¿Tienes diarrea? ").strip().lower() == "sí",
        "dolor_estomago": input("¿Tienes dolor de estómago? ").strip().lower() == "sí",
        "congestion": input("¿Tienes congestión nasal? ").strip().lower() == "sí",
        "fatiga": input("¿Tienes fatiga o cansancio extremo? ").strip().lower() == "sí"
    }

    print("\nPosible diagnóstico:")

    # Reglas
    if sintomas["fiebre"] and sintomas["tos"] and sintomas["dolor_garganta"]:
        print("- Podrías tener una gripe común.")
    if sintomas["fiebre"] and sintomas["tos"] and sintomas["fatiga"]:
        print("- Podrías tener influenza.")
    if sintomas["dolor_estomago"] and sintomas["nauseas"] and sintomas["vomitos"]:
        print("- Podrías tener una infección estomacal.")
    if sintomas["diarrea"] and sintomas["dolor_estomago"]:
        print("- Podrías tener gastroenteritis.")
    if sintomas["congestion"] and sintomas["dolor_garganta"]:
        print("- Podrías tener un resfriado.")
    if sintomas["fiebre"] and sintomas["vomitos"]:
        print("- Podrías tener fiebre tifoidea.")
    if sintomas["fatiga"] and sintomas["dolor_cabeza"]:
        print("- Podrías tener agotamiento o estrés.")
    if sintomas["dolor_cabeza"] and sintomas["congestion"]:
        print("- Podrías tener sinusitis.")
    if sintomas["fiebre"] and sintomas["diarrea"]:
        print("- Podrías tener dengue (consultar con un médico).")
    if sintomas["nauseas"] and sintomas["fatiga"]:
        print("- Podrías tener una indigestión o intoxicación leve.")

    print("\nNota: Este sistema es educativo. Consulta siempre a un médico para diagnóstico profesional.")

# Ejecutar el sistema
diagnostico()
